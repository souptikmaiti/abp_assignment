<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="visit"
            type="com.example.abpweddingsouptik.data.model.Visit" />

    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fce8e8">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{visit.dateString, default=Date}"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#B42E12"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_wed"
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:layout_below="@+id/tv_date"
                android:src="@drawable/logo"
                android:layout_margin="10dp"
                app:civ_border_color="@android:color/black"
                app:civ_border_width="2dp"/>

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{visit.actionType, default=Type}"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_margin="4dp"
                android:layout_below="@+id/tv_date"
                android:layout_toRightOf="@+id/iv_wed"/>

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{visit.description, default=Description}"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_margin="4dp"
                android:layout_toRightOf="@+id/iv_wed"
                android:layout_below="@+id/tv_type"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(visit.timeString), default=Time}"
                android:textSize="18sp"
                android:layout_margin="4dp"
                android:layout_toRightOf="@+id/iv_wed"
                android:layout_below="@+id/tv_description"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</layout>

